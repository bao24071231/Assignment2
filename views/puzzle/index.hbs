<div class="container-fluid text-center">
    <section class="py-3 text-center container">
        <div class="row py-lg-5 light-shade rounded">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-dark">List of puzzles</h1>
            </div>

        </div><br>
        <div class="row py-lg-3 light-shade rounded">
            <form action="/puzzle/search" method="post">
                <input class="form-control" type="search" name="name" placeholder="Search by name" required>
            </form>
        </div>
        
    </section>
    <br>
    <div class="container-fluid row content">
        <div class="col-sm-2 ">
        </div>
        <div class="col-sm-8 text-left light-shade rounded">
            <br>
            <div class="table-responsive-sm">
                <table class="table table-success">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Image</th>
                            <th scope="col">Type</th>
                            <th scope="col">Originated Year</th>
                            <th scope="col">Price</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    {{#each puzzles }}
                    <tbody>
                        <tr class="">
                            <th>{{ name }}</th>
                            <th><img src="{{ image }}" width="150" height="150" referrerpolicy="no-referrer"></th>
                            <th>{{type}}</th>
                            <th>{{originated_year}}</th>
                            <td>${{price}}</th>
                            <th>
                                <a class="btn btn-primary" href="/puzzle/detail/{{_id}}">Info</a>
                                <a class="btn btn-warning" href="/puzzle/edit/{{_id}}">Edit</a>
                                <a class="btn btn-danger" href="/puzzle/delete/{{_id}}"
                                    onclick="return confirm('Do you want to delete this game?');">Delete</a>
                            </th>
                        </tr>
                    </tbody>
                    {{/each}}
                </table>
            </div>
        </div>
        <div class="col-sm-2">
        </div>
    </div>
</div>